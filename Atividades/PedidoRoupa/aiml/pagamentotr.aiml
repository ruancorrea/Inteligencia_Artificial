<aiml version="2.0">
	<!-- insert your AIML categories here -->
		<category>
	    <pattern>PAGAMENTO</pattern>
	    <template>
	        <condition name="viagem" value="true">
    	        <condition name="cidade" value="false">
    	            É preciso de detalhes
    	            <srai>PACOTETURISMO</srai>
    	        </condition>
    	        
    	        <condition name="pacote" value="false">
    	            É preciso de detalhes
    	            <srai>PACOTETURISMO</srai>
    	        </condition>
	        </condition>
	        
	        <condition name="rp" value="true">
	            <condition name="roupa" value="false">
    	            É preciso de detalhes
    	            <srai>* ROUPA</srai>
    	        </condition>
	            
    	        <condition name="tamanho" value="false">
    	            É preciso de detalhes
    	            <srai>* ROUPA</srai>
    	        </condition>
    	        
    	        <condition name="tipo" value="false">
    	            É preciso de detalhes
    	            <srai>* ROUPA</srai>
    	        </condition>
	        </condition>
	        
	        
	        <think><set name="finalizado">true</set></think>
	        
	        Para finalizar o pedido é necessário a escolha do método de pagamento:
	        
	        <button>
	            Cartão de Crédito
	        </button>
	        
	        <button>
	            Cartão de Débito
	        </button>
	        
	        <button>
	            Boleto Bancário
	        </button>
	    </template>
	</category>
	
	<category>
	    <pattern>* PAGAMENTO</pattern>
	    <template>
	        <think><srai>PAGAMENTO</srai></think>
	    </template>
	</category>



